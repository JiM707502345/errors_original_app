
<%= form_with model: @user, url: user_registration_path, method: :post, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
  <%= image_tag("errorlogo2.jpg", class:"second-logo") %>
    <h1 class='form-header-text'>
      サインアップ
    </h1>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">名前</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :name, class:"input-default", id:"nickname", placeholder:"ニックネーム可", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"nnn@nnn", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">年齢</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='form-text-wrap'>
      <%= f.text_field :age, class:"input-default", id:"first-name-kana", placeholder:"数字のみ" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">性別</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='form-text-wrap'>
    <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
    </div>
  </div>
  <div class='register-btn'>
    <%= f.submit "サインアップ" ,class:"register-red-btn" %>
  </div>
  <div class="go-session">
    <%= link_to '既にアカウントをお持ちの方', new_user_session_path %>
  </div>
</div>
<% end %>
<%= render 'shared/second-footer'%>
