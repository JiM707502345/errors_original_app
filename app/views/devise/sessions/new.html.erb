<%= form_with model: @user, url: user_session_path, method: :post, class: 'registration-main', local: true do |f| %>
<div class='form-wrapping'>
  <div class='form-header'>
  <%= image_tag("errorlogo2.jpg", class:"second-logo") %>
    <h1 class='form-header-text'>
      ログイン
    </h1>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"nnn@nnn", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class='register-btn'>
    <%= f.submit "ログイン" ,class:"register-red-btn" %>
  </div>
  <div class="go-registration">
    <%= link_to 'アカウントをお持ちでない方', new_user_registration_path %>
  </div>
</div>

<% end %>

<%= render 'shared/second-footer'%>

 